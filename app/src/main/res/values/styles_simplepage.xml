<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="SimplePage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SimplePage.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SimplePage.Item.Card">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/simplepage_card</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp
        </item>
    </style>

    <style name="SimplePage.CardContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">@color/simple_page_link_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/simple_page_card_text_color</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="SimplePage.Item.Clickable">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/simplepage_card</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp
        </item>
    </style>

    <style name="SimplePage.Item.Category">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">@dimen/simple_page_item_category_padding_horizontal</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingStart">@dimen/simple_page_item_category_padding_horizontal</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/simple_page_category_text_color</item>
    </style>

    <style name="SimplePage.ContributorName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/simple_page_name_color</item>
    </style>

    <style name="SimplePage.ContributorDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/simple_page_desc_color</item>
    </style>
</resources>