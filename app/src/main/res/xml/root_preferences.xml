<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/basic_information">
        <EditTextPreference
            app:icon="@drawable/ic_userid"
            app:key="userid"
            app:title="@string/user_id"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_passwd"
            app:key="passwd"
            app:title="@string/passwd"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/general">
        <rikka.preference.SimpleMenuPreference
            app:defaultValue="system"
            app:entries="@array/dark_mode"
            app:entryValues="@array/dark_mode_value"
            app:icon="@drawable/ic_dark_mode"
            app:key="dark"
            app:summary="%s"
            app:title="@string/darkMode" />
        <rikka.preference.SimpleMenuPreference
            app:defaultValue="simple"
            app:entries="@array/themes"
            app:entryValues="@array/themes_value"
            app:icon="@drawable/ic_color_palette"
            app:key="theme"
            app:summary="%s"
            app:title="@string/mainTheme" />
        <rikka.preference.SimpleMenuPreference
            app:defaultValue="system"
            app:entries="@array/language_name"
            app:entryValues="@array/language_value"
            app:icon="@drawable/ic_language"
            app:key="locale"
            app:summary="%s"
            app:title="@string/language" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/other">
        <Preference
            app:icon="@drawable/ic_about"
            app:key="about"
            app:title="@string/about_title" />
    </PreferenceCategory>

</PreferenceScreen>