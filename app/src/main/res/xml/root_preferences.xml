<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="基本信息">

        <EditTextPreference
            app:key="userid"
            app:title="@string/user_id"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="passwd"
            app:title="@string/passwd"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="便捷设置">

        <SwitchPreferenceCompat
            app:key="autoLogin"
            app:title="@string/autoLogin" />

    </PreferenceCategory>

</PreferenceScreen>